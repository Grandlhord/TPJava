<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@drawable/modal_shape"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="00dp">

    <RelativeLayout
        android:id="@+id/amountContainer"
        android:layout_width="match_parent"
        android:layout_height="84dp"
        android:background="@drawable/modal_header">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/secondary"
            android:gravity="center"
            android:text="Add a Card"
            android:textAppearance="@style/modalText"
            android:textColor="@android:color/white" />

    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="15dp"
        android:orientation="vertical">
        <TextView
            android:id="@+id/name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Card Number"
            android:textAppearance="@style/subtitles"
            android:textColor="@android:color/black"
            android:layout_marginTop="30dp"/>

        <EditText
            android:id="@+id/cardNumber"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter card number"
            android:textAppearance="@style/textfields"
            android:inputType="number"
            android:paddingBottom="8dp"
            android:paddingStart="10dp"
            android:layout_marginBottom="16dp"
            android:layout_marginTop="10dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Name"
            android:textAppearance="@style/subtitles"
            android:textColor="@android:color/black"
            android:layout_marginTop="20dp"/>

        <EditText
            android:id="@+id/cardName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter name on card"
            android:textAppearance="@style/textfields"
            android:inputType="number"
            android:paddingBottom="8dp"
            android:paddingStart="10dp"
            android:layout_marginBottom="16dp"
            android:layout_marginTop="10dp"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="153dp"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/mobileNumber"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="Expiry Date"
                    android:textAppearance="@style/subtitles"
                    android:textColor="@android:color/black" />

                <EditText
                    android:id="@+id/expiryDate"
                    android:layout_width="149dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="16dp"
                    android:hint="Enter expiry date"
                    android:inputType="date"
                    android:paddingStart="10dp"
                    android:paddingBottom="8dp"
                    android:textAppearance="@style/textfields" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="158dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="60dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="CVV"
                    android:textAppearance="@style/subtitles"
                    android:textColor="@android:color/black" />

                <EditText
                    android:id="@+id/cvv"
                    android:layout_width="166dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="16dp"
                    android:hint="Enter cvv"
                    android:inputType="number"
                    android:paddingStart="10dp"
                    android:paddingBottom="8dp"
                    android:textAppearance="@style/textfields" />

            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="5dp">

            <CheckBox
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginEnd="16dp">
            </CheckBox>

            <TextView
                android:id="@+id/momoNumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:text="@string/allow_card"
                android:textColor="@color/secondary"
                android:textAppearance="@style/smallScreenText" />
        </LinearLayout>
        <Button
            android:id="@+id/btnSaveCard"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Save card"
            android:layout_gravity="center"
            android:textAppearance="@style/buttons"
            android:drawableEnd="@drawable/wallet"
            android:layout_marginTop="50dp"
            android:gravity="center" />
    </LinearLayout>


</LinearLayout>