<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TopUpAccount">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/btnGoBack"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/arrow_back"
                android:layout_gravity="center"
                android:padding="10dp"/>

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="16dp"
                android:src="@drawable/bdp_logo" />

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:text="@string/top_up_page"
                android:textAppearance="@style/appbar" />

        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Enter Details for your top-up"
            android:textAppearance="@style/pageTitle"
            android:textColor="@android:color/black"
            android:layout_marginTop="30dp"/>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Account Number"
            android:textAppearance="@style/subtitles"
            android:textColor="@android:color/black"
            android:layout_marginTop="30dp"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter account number"
            android:textAppearance="@style/textfields"
            android:inputType="number"
            android:paddingBottom="8dp"
            android:paddingStart="10dp"
            android:layout_marginBottom="16dp"
            android:layout_marginTop="10dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Payment Methods"
            android:textAppearance="@style/subtitles"
            android:textColor="@android:color/black"
            android:layout_marginTop="30dp"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center">

            <Button
                android:id="@+id/btnCreditDebitCard"
                android:layout_width="105dp"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/white"
                android:drawableTop="@drawable/credit_card"
                android:text=" Credit/Debit Card"
                android:textAppearance="@style/sectionDividers"
                android:textColor="@color/secondary"
                android:textSize="10sp"
                android:layout_marginEnd="10dp"  />

            <Button
                android:id="@+id/btnMomo"
                android:layout_width="105dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="10dp"
                android:drawableTop="@drawable/momo_icon"
                android:text=" Mobile Money"
                android:textAppearance="@style/sectionDividers"
                android:textColor="@color/secondary"
                android:textSize="10sp"
                android:backgroundTint="@color/white"
                />


            <Button
                android:id="@+id/btnBank"
                android:layout_width="105dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="10dp"
                android:backgroundTint="@color/white"
                android:drawableTop="@drawable/bank_transfer_icon"
                android:text=" Bank Transfer"
                android:textAppearance="@style/sectionDividers"
                android:textColor="@color/secondary"
                android:textSize="10sp" />
        </LinearLayout>

        <Button
            android:id="@+id/btnTopUpContinue"
            android:layout_width="wrap_content"
            android:layout_height="44dp"
            android:layout_gravity="center"
            android:layout_marginTop="300dp"
            android:drawableEnd="@drawable/ic_login"
            android:textAppearance="@style/buttons"
            android:text="Continue" />
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>